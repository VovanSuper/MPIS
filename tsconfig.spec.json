{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "watch": true,
    "outDir": "./dist/out-test-tsc",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "Client",
    "coverage",
    "config"
  ],
  "include": [
    "Server"
  ]
}